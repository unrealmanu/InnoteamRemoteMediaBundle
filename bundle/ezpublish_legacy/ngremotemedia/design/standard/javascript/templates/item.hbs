<div class="item">
    <a class="pick" data-id="{{id}}">
        {{#if is_image}}
            <img src="{{url}}" />
        {{/if}}
        {{#if is_video}}
            <i class="ngri-video ngri-big"></i>
        {{/if}}

        {{#if is_other}}
            <i class="ngri-book ngri-big"></i>
        {{/if}}
        <p class="meta">{{filename}}<br />
            <span class="details">{{width}} x {{height}}</span>
            {{#if shared}}
            <span class="share">{{translate "Shared"}}</span>
            {{/if}}
        </p>
    </a>
</div>
